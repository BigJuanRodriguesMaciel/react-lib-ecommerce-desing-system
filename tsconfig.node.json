{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"src/*": ["./src/*"],
			"scss/*": ["./src/lib/scss"],
			"components/*": ["./src/components"]
		}
	},
	"include": ["vite.config.ts"]
}
